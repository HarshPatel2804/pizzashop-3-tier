<table class="table  px-5" style="border-radius: 6px;">
    <thead>
        <tr>
            <th scope="col">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <span class="heading ">Name</span>
            </th>
            <th scope="col"><span class="heading">Capacity</span></th>
            <th scope="col"><span class="heading">Status</span></th>
            <th scope="col"><span class="heading">Action</span></th>
        </tr>
    </thead>
    <tbody>
        <input id="sectionId" value="@(Model.Count > 0 ? Model[0].Sectionid : false)" hidden>
        @foreach (var table in Model)
        {
            <tr>
                <td class="d-flex">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <span>@table.Tablename</span>
                </td>
                <td>@table.Capacity</td>
                <td><span
                        class="badge rounded-pill @(@table.Tablestatus == tablestatus.Occupied ? "bg-secondary" : (@table.Tablestatus == tablestatus.Available ? "bg-success" : "bg-danger"))">@table.Tablestatus</span>
                </td>
                <td>
                    <a href="Edit_user.html">
                        <img src="~/images/pen.svg" alt="profile image" class="me-2 bg-light" id="profile"
                            style="max-height: 30px; height: 100%; width:auto;">
                    </a>
                    <a data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
                        <img src="~/images/trash.svg" alt="profile image" class="me-2 bg-light deleteTable" id="profile"
                            data-bs-toggle="modal" data-bs-target="#DeleteTableModal" data-id="@table.Tableid"
                            data-sectionid="@table.Sectionid"
                            style="max-height: 30px; height: 100%; width:auto; border-radius: 100%;">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex justify-content-end align-items-center gap-2 mt-2 p-3">
    <div class="d-flex align-items-center">
        <span class="d-none d-sm-inline px-1">Items Per page:</span>
        <select id="pageSizeSelect" class="form-select form-select-sm" style="width: auto;">
            <option value="5" selected="@(ViewBag.PageSize == 5)">5</option>
            <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
            <option value="25" selected="@(ViewBag.PageSize == 25)">25</option>
        </select>
    </div>
    <div class="d-flex align-items-center gap-2">
        <span class="d-none d-sm-inline px-1">
            Showing @(ViewBag.TotalUsers > 0 ? ((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1) : 0)
            - @(ViewBag.TotalUsers > 0 ? Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalUsers) :
              0)
            of @ViewBag.TotalUsers
        </span>
        <nav>
            <ul class="pagination pagination-sm">
                <!-- Previous Page -->
                <li class="page-item @(ViewBag.CurrentPage > 1 ? "" : "disabled")">
                    <a class="page-link pagination-link" href="#" data-page="@(ViewBag.CurrentPage - 1)">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                <!-- Next Page -->
                <li class="page-item @(ViewBag.CurrentPage < ViewBag.TotalPages ? "" : "disabled")">
                    <a class="page-link pagination-link" href="#" data-page="@(ViewBag.CurrentPage + 1)">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>