@{
    Layout = "_Layout";
    ViewData["Title"] = "AddUser Page";
}
@model pizzashop.repository.ViewModels.UserViewModel;

<head>
    <link rel="stylesheet" href="~/css/userList.css">
</head>
<section style="min-height: 100vh; background-color: #fafafa;">
    <div class="row pt-4 ms-sm-5 me-sm-5 ms-3 me-3 mb-4" style="height: 70px;">
        <h2 class="col" style="color: rgb(101, 101, 224); font-family: Roboto; font-weight: 550">Add New User</h1>
            <a asp-controller="User" asp-action="UserList" type="button"
                class="btn btn-border-prime text-primary col-auto ms-2 d-flex align-items-center"
                style="border-radius: 4px;">
                <img src="~/images/left.png" style="height: 20px;"> Back
            </a>
    </div>
    <div class="row pt-4 ms-sm-5 me-sm-5 ms-3 me-3"
        style="border-radius: 6px; box-shadow: 1px 1px 15px rgb(108, 103, 103);">
        <form asp-controller="User" asp-action="AddUser" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="form-floating col-md-6 col-12 mb-3">
                    <input asp-for="FirstName" type="text" class="form-control" id="floatingInput"
                        placeholder="First Name">
                    <label for="floatingInput" class="label-pad">First Name*</label>
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
                <div class="form-floating col-md-6 col-12 mb-3">
                    <input asp-for="LastName" type="text" class="form-control" id="floatingPassword"
                        placeholder="Last Name">
                    <label for="floatingPassword" class="label-pad">Last Name*</label>
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-floating col-md-6 col-12 mb-3">
                    <input asp-for="Username" type="text" class="form-control" id="floatingInput"
                        placeholder="Username">
                    <label for="floatingInput" class="label-pad">Username*</label>
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>
                <div class="form-floating col-md-6 col-12 mb-3">
                    <select asp-for="Role" class="form-select" aria-label="Default select example">
                        <option value="">Select Role</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.Value">@role.Text</option>
                        }
                    </select>
                    <label for="floatingPassword" class="label-pad">Role*</label>
                    <span class="text-danger" asp-validation-for="Role"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-floating col-md-6 col-12 mb-3">
                    <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="Email">
                    <label for="floatingInput" class="label-pad">Email*</label>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-floating col-md-6 col-12 mb-3">
                    <input asp-for="Password" type="password" class="form-control" id="floatingPassword"
                        placeholder="Password">
                    <label for="floatingPassword" class="label-pad">Password*</label>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="row mb-3 mx-1">
                <label for="files" id="uploadLabel"
                    class="btn w-100 d-flex align-items-center justify-content-center flex-column col-12"
                    style="height: 100px; border: 1px dashed">
                    <div class="d-flex" id="BrowseImage">
                        <div class="d-flex flex-column align-items-center">
                            <img src="~/images/cloud-arrow-up.svg" alt="upload-icon" style="width: 30px;" />
                            <span>Browse files</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between d-none" id="imagePreviewContainer">
                        <img id="profileImg" style="width: 50px; height: 50px; object-fit: cover;" />
                        <div class="d-flex ms-3">
                            <button type="button" id="editImageBtn" class="btn btn-sm btn-outline-primary me-2">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button type="button" id="deleteImageBtn" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </label>
                <span id="fileError" class="text-danger  d-none">Only image files (jpg, jpeg, png, gif) are allowed.</span>

                <input id="files" type="file" class="upload-file d-none" name="ProfileImage" />
            </div>

            <div class="row">
                <div class="form-floating col-md-4 col-12 mb-3">
                    <select id="Country" asp-for="CountryId" class="form-select" aria-label="Default select example">
                        <option value="">Select Country</option>
                        @foreach (var country in Model.Countries)
                        {
                            <option value="@country.Value">@country.Text</option>
                        }
                    </select>
                    <label for="floatingPassword" class="label-pad">Country*</label>
                    <span class="text-danger" asp-validation-for="CountryId"></span>
                </div>
                <div class="form-floating col-md-4 col-12 mb-3">
                    <select id="State" asp-for="StateId" class="form-select" aria-label="Default select example">
                        <option value="">Select State</option>
                    </select>
                    <label for="floatingPassword" class="label-pad">State*</label>
                    <span class="text-danger" asp-validation-for="StateId"></span>
                </div>
                <div class="form-floating col-md-4 col-12 mb-3">
                    <select id="City" asp-for="CityId" class="form-select" aria-label="Default select example">
                        <option value="">Select City</option>
                    </select>
                    <label for="floatingPassword" class="label-pad">City*</label>
                    <span class="text-danger" asp-validation-for="CityId"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-floating col-md-4 col-12 mb-3">
                    <input type="text" asp-for="Zipcode" class="form-control" id="floatingInput" placeholder="Zipcode">
                    <label for="floatingInput" class="label-pad">Zipcode</label>
                    <span class="text-danger" asp-validation-for="Zipcode"></span>
                </div>
                <div class="form-floating col-md-4 col-12 mb-3">
                    <input type="text" asp-for="Address" class="form-control" id="floatingPassword"
                        placeholder="Address">
                    <label for="floatingPassword" class="label-pad">Address</label>
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
                <div class="form-floating col-md-4 col-12 mb-3">
                    <input type="text" asp-for="Phone" class="form-control" id="floatingPassword" placeholder="Phone">
                    <label for="floatingPassword" class="label-pad">Phone*</label>
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-auto mb-3">
                    <button type="submit" class="btn btn-prime" style="border-radius: 3px; width: 120px;">Create
                        User</button>
                </div>
                <div class="col-auto" style="padding-left: 0px;">
                    <a type="button" class="btn btn-border-prime text-primary" asp-controller="User" asp-action="UserList"
                        style="border-radius: 3px; width: 90px; ">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#Country").change(function () {
            var countryId = $(this).val();
            if (countryId) {
                $.getJSON('/Dashboard/GetStates', { countryId: countryId }, function (data) {
                    var state = $("#State");
                    state.empty();
                    state.append('<option value="">Select State</option>');
                    $.each(data, function (index, item) {

                        state.append('<option value="' + item.stateid + '">' + item.statename + '</option>');
                    });
                });
            }
            else {
                $("#State").html('<option value="">Select State</option>');
                $("#City").html('<option value="">Select City</option>');
            }
        });
        $("#State").change(function () {
            var stateId = $(this).val();
            if (stateId) {
                $.getJSON('/Dashboard/GetCities', { stateId: stateId }, function (data) {
                    console.log(data);
                    var city = $("#City");
                    city.empty();
                    city.append('<option value="">Select City</option>');
                    $.each(data, function (index, item) {
                        city.append('<option value="' + item.cityid + '">' + item.cityname + '</option>');
                    });
                });
            }
            else {
                $("#City").html('<option value="">Select City</option>');
            }
        });
    })
</script>
<script>
    $('#files').on('change', function (e) {
        const file = e.target.files[0];
        const fileError = $('#fileError');
        if (file) {
            const validImageTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/jpg'];

        if (!validImageTypes.includes(file.type)) {
            $('#files').val('');
            fileError.removeClass('d-none');
            $('#imagePreviewContainer').addClass('d-none');
            $('#BrowseImage').removeClass('d-none');
            return;
        }

        fileError.addClass('d-none');
            const reader = new FileReader();
            reader.onload = function (event) {
                $('#profileImg').attr('src', event.target.result);
                $('#BrowseImage').addClass('d-none');
                $('#imagePreviewContainer').removeClass('d-none');
            };
            reader.readAsDataURL(file);
        }
    });

    $('#editImageBtn').on('click', function (e) {
        e.preventDefault();
        $('#files').click();
    });

    $('#deleteImageBtn').on('click', function (e) {
        e.preventDefault();
        $('#files').val('');
        $('#imagePreviewContainer').addClass('d-none');
        $('#BrowseImage').removeClass('d-none');
         $('#fileError').addClass('d-none');
    });
</script>