@foreach (var Section in Model)
{
    var sectionId = $"section{Section.SectionId}";

    <div class="accordion-item mb-3 border rounded shadow-sm bg-white">
        <div class="d-flex">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#@sectionId"
                aria-expanded="true" aria-controls="@sectionId">
                <div class="d-flex align-items-center justify-content-between w-100">
                    <div class="d-flex align-items-center">
                        <span class="text-color fs-4 ms-2">@Section.SectionName</span>
                    </div>
                    <div class="d-flex">
                        <div class="d-flex gap-2">
                            <div class="d-flex align-items-center ms-auto me-3">
                                <div class="d-flex align-items-center me-3">
                                    <span class="status-dot available"></span>
                                    <span>@Section.AvailableCount</span>
                                </div>
                                <div class="d-flex align-items-center me-3">
                                    <span class="status-dot assigned"></span>
                                    <span>@Section.AssignedCount</span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <span class="status-dot running"></span>
                                    <span>@Section.RunningCount</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </button>
            <button type="button" id="SaveToken" data-id="@Section.SectionId"
                class="btn btn-border-prime btn-sm align-self-center p-2 me-3" style="height: 40px; width: 160px">
                <i class="bi bi-plus"></i> Waiting Token
            </button>
        </div>

        <div id="@sectionId" class="accordion-collapse collapse" data-bs-parent="#floorAccordion">
            <div class="accordion-body">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-5 g-3 mb-3">
                    @foreach (var table in Section.Tables)
                    {
                        string cardClass = "table-gray";
                        switch (table.Status)
                        {
                            case pizzashop.repository.ViewModels.TableViewStatus.Available:
                                cardClass = "table-gray";
                                break;
                            case pizzashop.repository.ViewModels.TableViewStatus.Assigned:
                                cardClass = "table-green";
                                break;
                            case pizzashop.repository.ViewModels.TableViewStatus.Running:
                                cardClass = "table-blue";
                                break;
                        }

                        <div class="col d-flex">
                            <div class="table-card @cardClass" data-table-id="@table.TableId">
                                <div class="d-flex justify-content-between mb-2">
                                    <h6 class="mb-0">@table.TableName</h6>
                                    @if (table.Status != pizzashop.repository.ViewModels.TableViewStatus.Available)
                                    {
                                        <span class="text-muted">â‚¬@table.CurrentOrderAmount.ToString("F2")</span>
                                    }
                                </div>
                                <div class="d-flex justify-content-between align-self-center">
                                    <div class="d-flex flex-column"><i class="bi bi-people"></i> @table.Capacity</div>
                                    <div class="d-flex flex-column align-items-center">
                                        <div><i class="bi bi-alarm"></i></div>
                                        <div class="small"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="text-end">
                    <button type = "submit" class="btn btn-prime assign-btn" data-id="@Section.SectionId" disabled>Assign</button>
                </div>
            </div>
        </div>
    </div>
}

<script>
   $(document).ready(function () {
    $('.assign-btn').prop('disabled', true);

    let selectedTablesPerSection = {};

    $(document).on('click', '.table-card', function () {
        const tableId = $(this).data('table-id');
        const sectionId = $(this).closest('.accordion-item').find('.assign-btn').data('id');

        if ($(this).hasClass('table-gray')) {
            if (!selectedTablesPerSection[sectionId]) {
                selectedTablesPerSection[sectionId] = [];
            }

            if ($(this).hasClass('selected-table')) {
                $(this).removeClass('selected-table');
                selectedTablesPerSection[sectionId] = selectedTablesPerSection[sectionId].filter(id => id !== tableId);
            } else {
                $(this).addClass('selected-table');
                selectedTablesPerSection[sectionId].push(tableId);
            }

            $(`.assign-btn[data-id="${sectionId}"]`).prop('disabled', 
                selectedTablesPerSection[sectionId].length === 0);
        }
    });

    $('.accordion-collapse').on('hidden.bs.collapse', function () {
        const sectionId = $(this).closest('.accordion-item').find('.assign-btn').data('id');
        
        if (selectedTablesPerSection[sectionId]) {
            selectedTablesPerSection[sectionId].forEach(tableId => {
                $(`[data-table-id="${tableId}"]`).removeClass('selected-table');
            });
            
            selectedTablesPerSection[sectionId] = [];
            
            $(`.assign-btn[data-id="${sectionId}"]`).prop('disabled', true);
        }
    });
});
</script>