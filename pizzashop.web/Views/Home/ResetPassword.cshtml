@{
    Layout = "_IndexLayout";
    ViewData["Title"] = "Home Page";
}
@model pizzashop.repository.ViewModels.ResetPasswordViewModel;
@await Html.PartialAsync("_Toast")
<span style="font-size: 30px; font-weight: 500; font-family: Roboto;" class="mt-5">Reset Password</span>
<small class="mt-3" style="font-weight: 200;">Enter your email and we'll send you a link to reset your password.</small>

<form class="w-100" asp-controller="Home" asp-action="ResetPassword">
    <input asp-for="Token" hidden/>
    <div class="input-group">
        <input type="password" asp-for="Password" class="form-control form-control-lg mt-3" id="password" placeholder="New Password" >
        <span class="input-group-text mt-3 togglePassword" style="cursor: pointer; height: 48px;" >
            <i class="bi bi-eye-slash" id="eyeIcon" style="font-size: 20px;"></i>
        </span>
    </div>
    <span asp-validation-for="Password" class="text-danger"></span>
    <div class="input-group">
        <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg mt-3" id="password" placeholder="Confirm New Password" >
        <span class="input-group-text mt-3 togglePassword" style="cursor: pointer; height: 48px;" >
            <i class="bi bi-eye-slash" id="eyeIcon" style="font-size: 20px;"></i>
        </span>
    </div>
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    <button type="submit" class="mt-3"
        style="border: none; background-color: rgb(68, 68, 228); border-radius: 3px; width: 100%; height: 2.5rem;">Send</button>
    <div class="d-flex justify-content-center mt-1">
        <a asp-controller="Home" asp-action="Index">Back to Login</a>
    </div>
</form>