@model pizzashop.repository.ViewModels.LoginViewModel;
@{
    Layout = "_IndexLayout";
    ViewData["Title"] = "Home Page";
};
@await Html.PartialAsync("_Toast")
            <span style="font-size: 30px; font-weight: 500; font-family: Roboto;" class="mt-3">Welcome,</span>
            @if(ViewBag.ErrorMessage != null) {
        <div style="color: red;">@ViewBag.ErrorMessage</div>           
            }
            <form class="w-100" method="post" id="loginForm">
                <div class="input-group">
                    <input type="email" asp-for="Email" class="form-control form-control-lg mt-3" id="email" name="email" placeholder="Email*"  value="@Context.Request.Cookies["email"]">
                    <span class="input-group-text mt-3" style="height: 48px;">
                        <img src="~/images/icons/customer.svg" alt="user-icon" style="width:20px; height:20px;">
                    </span>
                </div>
                <input type="password" asp-for = "Password" class="form-control form-control-lg mt-3" id="password" name="password" placeholder="Password*"  value="@Context.Request.Cookies["password"]">
                <div class="w-100 d-flex justify-content-between align-items-center mt-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="remember" name="remember" value="true" asp-for="Remember">
                        <label class="form-check-label" for="flexCheckDefault">
                            Remember me
                        </label>
                    </div>
                    <a asp-controller="Home" asp-action="ForgotPassword">Forgot Password?</a>
                </div>
                <button type="submit" class="mt-3"
                    style="border: none; background-color: rgb(68, 68, 228); border-radius: 3px; width: 100%; height: 2.5rem;">Login</button>
            </form>
