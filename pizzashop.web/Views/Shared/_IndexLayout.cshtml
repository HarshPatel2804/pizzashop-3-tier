@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login Page</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    
</head>
<body>
    <main class="row gx-0">
        <section class="col-6 left-section">
            <img src="~/images/dominos_background.jpg" alt="pizza image" class="w-100 h-100 object-fit-cover">
        </section>
        <section class="col-md-6 col-sm-12 d-flex flex-column justify-content-center align-items-start form-container"
            style="background-color: rgb(200, 240, 250); padding: 0px 10rem;">
            <div class="w-100 d-flex justify-content-center align-items-center">
                <div class="me-2">
                    <img src="~/images/logos/pizzashop_logo.png" alt="logo" style="width: 100px; height: auto;">
                </div>
                <h2 style="color: rgb(101, 101, 224)">PIZZASHOP</h2>
            </div>
            @RenderBody()
        </section>
    </main>
</body>

</html>