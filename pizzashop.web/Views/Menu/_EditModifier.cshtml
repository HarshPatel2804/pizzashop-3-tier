@model pizzashop.repository.ViewModels.ModifierViewModel;

@{
    var selectedIds = Model.SelectedModifierGroups?.Select(id => id.ToString()) ?? new string[0];
    
}
<div class="modal fade" id="editModifierModal" tabindex="-1" aria-labelledby="editModifierModal" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addNewModifier">Edit Modifier</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="EditModifierForm">
            <div class="modal-body">
                <!-- first row -->
                <input asp-for="Modifierid" hidden>
                <div>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                                <div class="form-floating position-relative">
                                    <div class="selected-options-display" id="selectedModifiersDisplay">
                                        <span id="modifierPlaceholder"></span>
                                    </div>
                                    <div class="dropdown-menu modifier-checkbox-dropdown" id="modifierDropdown">
                                        <div class="modifier-checkbox-container">
                                            @foreach (var modifierGroup in Model.ModifierGroups) 
                                            {
                                            <div class="form-check">
                                                <input class="form-check-input modifier-checkbox" type="checkbox"
                                                    value="@modifierGroup.Value" id="@modifierGroup.Value" @(selectedIds.Contains(modifierGroup.Value.ToString()) ? "checked" : "")>
                                                <label class="form-check-label" for="@modifierGroup.Value">@modifierGroup.Text</label>
                                            </div>
                                            }
                                        </div>
                                    </div>
                                    <label for="selectedModifiersDisplay">Select Modifier Group(s)</label>
                                    <!-- Hidden input to store selected values -->
                                    <input type="hidden" id="selectedModifiers" name="selectedModifiers">
                                </div>
                            </div>
                            <input type="hidden" id="modifierId" value="@Model.Modifierid">
                            <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="floatingInput-Name" placeholder="Name" asp-for="Modifiername">
                                    <label for="floatingInput-Name">Name*</label>
                                    <span class="text-danger" asp-validation-for="Modifiername"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container-fluid ">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-12 mb-3">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Rate" asp-for="Rate">
                                <label for="floatingInput">Rate*</label>
                                <span class="text-danger" asp-validation-for="Rate"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Quantity" asp-for="Quantity">
                                <label for="floatingInput">Quantity*</label>
                                <span class="text-danger" asp-validation-for="Quantity"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12 doted-border">
                            <div class="form-floating">
                                <select class="form-select" asp-for="Unitid" asp-items="Model.Units" id="floatingSelect"
                                    aria-label="Item type">
                                    <option value="">Select a Unit</option>
                                </select>
                                <label for="floatingSelect">Unit*</label>
                                <span class="text-danger" asp-validation-for="Unitid"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container form-floating">
                    <textarea class="form-control" placeholder="Give Description of this Modifier"
                        id="floatingTextarea" asp-for="Description"></textarea>
                    <label for="floatingTextarea" style="left: 10px !important;">Description</label>
                </div>
            </div>

            <div class="modal-footer d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary Edit-Modifier">Save</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
            </div>
            </form>
        </div>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>