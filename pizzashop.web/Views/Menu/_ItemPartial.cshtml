<table class="table  px-5" style="border-radius: 6px;">
    <thead>
        <tr>
            <th scope="col">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <span class="heading ">Name</span>
            </th>
            <th scope="col"><span class="heading">Item Type</span></th>
            <th scope="col"><span class="heading">Rate</span></th>
            <th scope="col"><span class="heading">Quantity</span> </th>
            <th scope="col"><span class="heading">Available</span></th>
            <th scope="col"><span class="heading">Action</span></th>
        </tr>
    </thead>
    <tbody>
         @foreach (var item in Model)
         {
        <tr>
            <td class="d-flex">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <img src="@(string.IsNullOrEmpty(item.Itemimg) ? Url.Content("~/images/dining-menu.png") : Url.Content("~/images/uploads/" + item.Itemimg))" alt="profile image" class="me-2 bg-light" id="profile"
                    style="max-height:35px; height: 100%; width:auto; border-radius: 100%;">
                <span>@item.Itemname</span>
            </td>
            <td><img src=@(item.Itemtype == itemtype.Veg ? "../images/icons/veg-icon.svg" : (item.Itemtype == itemtype.Nonveg ? "../images/icons/non-veg-icon.svg" : "../images/icons/vegan-icon.svg")) width="20px" class="ms-4"></td>
            <td>@item.Rate</td>
            <td>@item.Quantity</td>
            <td class="mx-auto">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" @(item.Isavailable ? "checked" : "")>
                </div>
            </td>
            <td>
                <a>
                    <img src="~/images/pen.svg" alt="profile image" class="me-2 bg-light editItem" id="profile" data-id="@item.Itemid"
                        style="max-height: 30px; height: 100%; width:auto;">
                </a>
                <a data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
                    <img src="~/images/trash.svg" alt="profile image" class="me-2 bg-light deleteItem" id="profile" data-bs-toggle="modal" data-bs-target="#DeleteItemModal" data-id="@item.Itemid" data-category="@item.Categoryid"
                        style="max-height: 30px; height: 100%; width:auto; border-radius: 100%;">
                </a>

            </td>
        </tr>
         }
    </tbody>
</table>