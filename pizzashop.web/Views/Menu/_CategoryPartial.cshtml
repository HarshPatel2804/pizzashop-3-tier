<ul>
    @foreach (var category in Model)
    {
        <li class="d-flex items selectedCategory" tabindex="0" data-id="@category.Categoryid">
            <div class="d-flex align-items-center" style="padding-top: 5px; padding-bottom: 5px;">
                <img src="~/images/dots-graphic.png">
                <div style="width: 130px;" class="text-wrap ms-1 fw-bold">
                    @category.Categoryname</div>
            </div>
            <button class="btn ms-auto edit-btn" type="button" data-bs-toggle="modal" data-bs-target="#Edit-Category"
                data-id="@category.Categoryid">
                <img src="~/images/pen.svg" class="d-none">
            </button>
            <button class="btn ms-1" type="button" data-bs-toggle="modal" data-bs-target="#DeleteModal">
                <img src="~/images/trash.svg" style="margin-right: 0px;" class="d-none" class="d-none">
            </button>
        </li>
    }
</ul>
<div class="fade modal" id="DeleteModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="width: 400px;">
        <div class="modal-content">
            <div class="row mx-1 mt-2">
                <h5 class="modal-title col" id="staticBackdropLabel">Delete confirmation</h5>
                <button type="button" class="btn-close col-auto me-1" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="d-flex justify-content-center align-items-center mt-4 flex-column">
                <img src="~/images/caution.png" style="height: 40px; width: 40px;">
                <span>Are you sure you want to delete this user?</span>
                <div class="d-flex justify-content-center align-items-center mt-2 mb-4">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                        style="border-radius: 3px; width: 60px;">Yes</button>
                    <button type="button" class="btn ms-2 border" style="border-radius: 3px; width: 60px;">No</button>
                </div>
            </div>
        </div>
    </div>
</div>
