<table class="table border">
    <tr>
        <td>
            <div class="d-flex sortDiv">
                #Orders
                <a href="#" class="sort-icon" id="sortIdAsc" data-column="orderid">
                    <i class="bi bi-arrow-up"></i>
                </a>
                <a href="#" class="sort-icon" id="sortIdDesc" data-column="orderid">
                    <i class="bi bi-arrow-down"></i>
                </a>
            </div>
        </td>
        <td>
            <div class="d-flex sortDiv">
                Date
                <a href="#" class="sort-icon" id="sortDateAsc" data-column="orderdate">
                    <i class="bi bi-arrow-up"></i>
                </a>
                <a href="#" class="sort-icon" id="sortDateDesc" data-column="orderdate">
                    <i class="bi bi-arrow-down"></i>
                </a>
            </div>
        </td>
        <td>
            <div class="d-flex sortDiv">
                Customers
                <a href="#" class="sort-icon" id="sortNameAsc" data-column="customername">
                    <i class="bi bi-arrow-up"></i>
                </a>
                <a href="#" class="sort-icon" id="sortNameDesc" data-column="customername">
                    <i class="bi bi-arrow-down"></i>
                </a>
            </div>
        </td>
        <td class="text-secondary">Status</td>
        <td class="text-secondary">PaymentMode</td>
        <td class="text-secondary">Rating</td>
         <td>
            <div class="d-flex sortDiv">
                Total Amount
                <a href="#" class="sort-icon" id="sortDateAsc" data-column="totalamount">
                    <i class="bi bi-arrow-up"></i>
                </a>
                <a href="#" class="sort-icon" id="sortDateDesc" data-column="totalamount">
                    <i class="bi bi-arrow-down"></i>
                </a>
            </div>
        </td>
        <td class="text-secondary">Action</td>
    </tr>
    @foreach (var o in Model)
    {
        <tr data-orderid = "@o.Orderid">
            <td>
                # @o.Orderid
            </td>
            <td>@o.Orderdate.ToString("yyyy-MM-dd")</td>
            <td>@o.Customer.Customername</td>
            <td>@o.OrderStatus</td>
            <td>@o.Paymentmode</td>
            <td>
                <div class="star-rating">
                    @{
                        decimal rating = o.Rating;
                        for (int i = 1; i <= 5; i++)
                        {
                            <span class="star @(i <= rating ? "filled" : "")">★</span>
                        }
                    }
                </div>
            </td>
            <td>
                @o.Totalamount
            </td>
            <td>
                <a id="file-down" class="me-2">
                    <i class="bi bi-filetype-pdf" style="font-size: 22px;"></i>
                </a>
                <a class="border-0 sweetalert viewButton" data-id="@o.Orderid">
                    <i class="bi bi-eye" style="font-size: 22px;"></i>
                </a>
            </td>
        </tr>
    }
</table>
<div class="d-flex justify-content-end align-items-center gap-2 mt-2 p-3">
    <div class="d-flex align-items-center">
        <span class="d-none d-sm-inline px-1">Items Per page:</span>
        <select id="pageSizeSelect" class="form-select form-select-sm" style="width: auto;">
            <option value="5" selected="@(ViewBag.PageSize == 5)">5</option>
            <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
            <option value="25" selected="@(ViewBag.PageSize == 25)">25</option>
        </select>
    </div>
    <div class="d-flex align-items-center gap-2">
        <span class="d-none d-sm-inline px-1">
            Showing @(ViewBag.TotalUsers > 0 ? ((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1) : 0)
            - @(ViewBag.TotalUsers > 0 ? Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalUsers) :
              0)
            of @ViewBag.TotalUsers
        </span>
        <nav>
            <ul class="pagination pagination-sm mt-3">
                <!-- Previous Page -->
                <li class="page-item @(ViewBag.CurrentPage > 1 ? "" : "disabled")">
                    <a class="page-link pagination-link" href="#" data-page="@(ViewBag.CurrentPage - 1)">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                <!-- Next Page -->
                <li class="page-item @(ViewBag.CurrentPage < ViewBag.TotalPages ? "" : "disabled")">
                    <a class="page-link pagination-link" href="#" data-page="@(ViewBag.CurrentPage + 1)">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
<style>
    .star-rating {
        display: flex;
        align-items: center;
    }

    .star {
        color: #ddd;/ Unfilled star color / font-size: 23px;
        margin-right: 2px;
    }

    .star.filled {
        color: #ffc107;/ Filled star color (golden yellow) /
    }
</style>
<script>
    function renderStarRating(rating) {
        let starHtml = '';
        for (let i = 1; i <= 5; i++) {
            starHtml += `<span class="star ${i <= rating ? 'filled' : ''}">★</span>`;
        }
        return starHtml;
    }
    $("#file-down").click(function(){
            let orderid = $(this).closest("tr").data("orderid");
            let url = `/Orders/ForPdfDownload?orderid=${encodeURIComponent(orderid)}`;

            window.location.href = url;
        });
</script>
